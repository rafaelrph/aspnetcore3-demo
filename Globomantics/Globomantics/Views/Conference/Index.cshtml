@using Shared.Models
@model IEnumerable<ConferenceModel>

<div class="row">
    <div class="col-md-10 col-md-offset-2">
        <table class="table">
            <tr>
                <th>Title</th>
                <th>Speaker</th>
                <th>Approved</th>
                <th>Actions</th>
            </tr>
            @Html.DisplayForModel()
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        @await Component.InvokeAsync("Statistics", new { statsCaption = "Statistics" })
    </div>
    <div class="col-md-4">
        <a asp-action="Add">Add New Conference</a>
    </div>
</div>